  <div class="top-bar-left">
    <ul class="dropdown menu data-dropdown-menu" style="background-color:#fef100;">
      <li class="has-submenu">
        <ul class="submenu menu vertical" data-submenu></ul>
      </li>
      <li style="margin-top: 45px;"><a href="${path1 }/board/list.do">보드</a></li>
	  <li style="margin-top: 45px;"><a href="${path1 }/member/list.do">멤버</a></li>
	  <li style="margin-top: 45px;"><a href="${path1 }/free/list.do">자유</a></li>
      <li style="margin-top: 45px;"><a href="${path1 }/qna/list.do">QnA</a></li>
      <li style="margin-top: 45px;">
      	<a href="/"><img src="https://ottogi.co.kr/images/common/logo.png" alt="logo" style="margin-left: 600px; margin-top:-50px;"></a>
      </li>
    </ul>
  </div>
  <script>
	$(document).ready(function(){
		$.ajax({
			url:"${path2 }/MemuLoadCtrl.do",
			type:"POST",
			enctype:"UTF-8",
			datatype:"json",
			processData:false,
			contentType:false, 
			cache:false,
			success:function(data){
				$(".navbar-dropdown.cate").empty();
				var trans = $.parseJSON(data);
				$.each(trans, function(key, value){
					if(key=="data"){
						for(var i=0;i<value.length;i++){
							if(value[i].cate=="A"){
								$("#cate01").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="B"){
								$("#cate02").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="C"){
								$("#cate03").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="D"){
								$("#cate04").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="E"){
								$("#cate05").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="F"){
								$("#cate06").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							} else if(value[i].cate=="G"){
								$("#cate07").append("<a href='${path2 }/GetTourDetailCtrl.do?no="+value[i].no+"'>"+value[i].place+"</a>");
							}
						}
					}
				});
				
			}
		});
	});
	</script>
  <div class="top-bar-right">
    <ul class="menu" style="background-color:#fef100;">
      <li><a href="${path1 }/member/loginForm.do" style="background-color:rgba(220, 44, 52); margin-right:10px; color:white; ">로그인</a></li>
      <li><a href="${path1 }/member/agree.do" style="background-color:rgba(220, 44, 52); color:white; ">회원가입</a></li>
