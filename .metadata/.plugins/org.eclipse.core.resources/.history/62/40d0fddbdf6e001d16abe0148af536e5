package com.ottogi.controller;

import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.ottogi.dto.BoardDTO;
import com.ottogi.service.BoardService;

@Controller
@RequestMapping("/board/*")
public class BoardController {

	@Autowired
	private BoardService boardService;
	
	@GetMapping("list.do")
	public String getBooardList(Model model) throws Exception {
		List<BoardDTO> boardList = boardService.boardList(); 
		model.addAttribute("boardList", boardList);
		return "board/boardList";
	}
	
	@GetMapping("detail.do")	//ex : board/detail.do?no=1
	public String getBoardDetail(HttpServletRequest request, Model model) throws Exception {
		int no = Integer.parseInt(request.getParameter("no"));
		BoardDTO dto = boardService.boardDetail(no);
		model.addAttribute("dto", dto);
		System.out.println(dto.getAuthor());
		return "board/boardDetail";
	}
	
	
}
