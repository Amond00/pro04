package com.ottogi.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.ottogi.dto.MemberDTO;
import com.ottogi.service.MemberService;

@Controller
@RequestMapping("/board/*")
public class BoardController {
	//의존성 주입
		@Autowired
		boardService boardService;
		
		//member/list.do -> MemberService -> MemberDAO -> MyBatis(memberMapper) -> DB
		//localhost:8091/member/list.do
		@RequestMapping(value="list.do", method=RequestMethod.GET)
		public String boardList(Model model) throws Exception{
			List<BoardDTO> boardList = boardService.memberList();
			model.addAttribute("memberList", boardList);
			return "member/memberList";
		}
		
		//localhost:8091/member/getMember.do
		//@RequestMapping("getMember.do")
}
